<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="DATE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="TIME"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/card_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_time"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="SOURCE"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_source"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="DESTINATION"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_destination"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="FARE"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:src="@drawable/train_img" />

    </LinearLayout>

</androidx.cardview.widget.CardView>